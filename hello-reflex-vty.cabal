cabal-version:      3.0
name:               hello-reflex-vty
version:            0.1.0.0
build-type:         Simple

common warnings
  ghc-options: -Wall

executable hello-reflex-vty
  hs-source-dirs:   app
  import:           warnings
  main-is:          Main.hs
  ghc-options: -threaded -Wall
  build-depends:    base
                  , reflex
                  , reflex-vty
                  , text
                  , vty
  default-language: Haskell2010
